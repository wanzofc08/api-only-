{
  "version": 2,
  "name": "anonymous-chat",
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "admin.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/messages", "dest": "server.js" },
    { "src": "/admin/clear", "dest": "server.js" },
    { "src": "/", "dest": "index.html" },
    { "src": "/admin", "dest": "admin.html" }
  ],
  "functions": {
        "api/messages": {
            "memory": 512
        }
  },
  "environment": {
    "MONGODB_URI": "mongodb+srv://username:password@your-cluster.mongodb.net/your-database"
  }
}
